{
    "compilerOptions": {
        "target": "es6",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "./src"
    },
    "exclude": [
        "node_modules"
    ],
    
    "files": [
        "./src/index.ts"
    ]
}
